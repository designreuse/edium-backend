{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "core-service",
      "host": {
        "sourcePath": "/var/app/current/core-service"
      }
    },
    {
      "name": "auth-service",
      "host": {
        "sourcePath": "/var/app/current/auth-service"
      }
    },
    {
      "name": "api-gateway",
      "host": {
        "sourcePath": "/var/app/current/api-gateway"
      }
    },
    {
      "name": "service-registry",
      "host": {
        "sourcePath": "/var/app/current/service-registry"
      }
    },
    {
      "name": "zipkin-server",
      "host": {
        "sourcePath": "/var/app/current/zipkin-server"
      }
    },
    {
      "name": "config-server",
      "host": {
        "sourcePath": "/var/app/current/config-server"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "auth-service",
      "image": "edium/auth-service",
      "essential": true,
      "memory": 1280,
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8088,
          "containerPort": 8088
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-auth-service",
          "containerPath": "/var/log/auth-service"
        }
      ],
      "links": [
        "service-registry",
        "config-server",
        "zipkin-server"
      ]
    },
    {
      "name": "core-service",
      "image": "edium/core-service",
      "essential": true,
      "memory": 1280,
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8081,
          "containerPort": 8081
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-core-service",
          "containerPath": "/var/log/core-service"
        }
      ],
      "links": [
        "service-registry",
        "config-server",
        "zipkin-server"
      ]
    },
    {
      "name": "api-gateway",
      "image": "edium/api-gateway",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8888
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-api-gateway",
          "containerPath": "/var/log/api-gateway"
        }
      ],
      "links": [
        "core-service",
        "service-registry",
        "auth-service",
        "zipkin-server"
      ]
    },
    {
      "name": "service-registry",
      "image": "edium/service-registry",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 8761,
          "containerPort": 8761
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-service-registry",
          "containerPath": "/var/log/service-registry"
        }
      ],
      "links": [
        "zipkin-server"
      ]
    },
    {
      "name": "config-server",
      "image": "edium/config-server",
      "essential": true,
      "memory": 1280,
      "portMappings": [
        {
          "hostPort": 9999,
          "containerPort": 9999
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-config-server",
          "containerPath": "/var/log/config-server"
        }
      ],
      "links": [
        "service-registry",
        "zipkin-server"
      ]
    },
    {
      "name": "zipkin-server",
      "image": "openzipkin/zipkin",
      "essential": false,
      "memory": 700,
      "portMappings": [
        {
          "hostPort": 9411,
          "containerPort": 9411
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-zipkin-server",
          "containerPath": "/var/log/zipkin-server"
        }
      ]
    }
  ]
}
